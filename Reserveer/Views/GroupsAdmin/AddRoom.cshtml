
@{
    ViewData["Title"] = "AddRoom";
}

<h2 class="text-center">Add New Room</h2>

<div class="panel-group" id="Group" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default opacityWhitebg">
        <div class="panel-heading themeBGColor cwhite" role="tab" id="headingOne">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#Group" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Room Info
                </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in " style="padding:40px;" role="tabpanel" aria-labelledby="headingOne">

            <div class="row"> 
                <div class="col-sm-6">
                    <div class="input-group ">
                        <span class="input-group-addon" id="basic-addon1">Domain </span>
                        <input type="text" class="form-control" placeholder="Domain.nl" aria-describedby="basic-addon1">
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="input-group ">
                        <span class="input-group-addon" id="basic-addon1">Verification Mail</span>
                        <input type="text" class="form-control" placeholder="email with domain" aria-describedby="basic-addon1">
                    </div>

                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <div class="input-group ">
                        <span class="input-group-addon" id="basic-addon1">Domain </span>
                        <input type="text" class="form-control" placeholder="Domain.nl" aria-describedby="basic-addon1">
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="input-group ">
                        <span class="input-group-addon" id="basic-addon1">Verification Mail</span>
                        <input type="text" class="form-control" placeholder="email with domain" aria-describedby="basic-addon1">
                    </div>

                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <h3>Room avaibility</h3>
                    <label class="radio-inline"><input type="radio" name="optradio" class="selected active" selected="selected">Active</label>
                    <label class="radio-inline"><input type="radio" name="optradio">Inactive</label>


                </div>
                <div class="col-sm-6"> 
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Comment</span>
                        <textarea class="form-control" rows="4" id="comment"></textarea>
                    </div>

                </div>

            </div>

            <div class="row">
                <button type="submit" class="btn btn-lg btn-primary  center-block" style="margin-top:10px;">Save</button>

            </div>

        </div>
    </div>
</div>


<div class="panel-group" id="Domains" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default opacityWhitebg">
        <div class="panel-heading themeBGColor cwhite" role="tab" id="heading2">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#Domains" href="#collapse2" aria-expanded="true" aria-controls="collapse2">
                    InfoViews
                </a>
            </h4>
        </div>
        <div id="collapse2" class="panel-collapse collapse in " style="padding:20px;" role="tabpanel" aria-labelledby="heading2">

            <div class="row">
                <div class="col-sm-6">
                    <div class="input-group ">
                        <span class="input-group-addon" id="basic-addon1">Room ID </span>
                        <input type="text" class="form-control" value="1234" aria-describedby="basic-addon1" disabled>
                    </div>

                </div>
                <div class="col-sm-6"> 
                    <div class="input-group"> 
                        <select class="form-control" id="sel1">
                            <option>Avaible InfoViews</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                        </select>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>


