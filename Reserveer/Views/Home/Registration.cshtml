@model Reserveer.Models.UserRegistration
@{
  ViewData["Title"] = "Registration";
}


<div class="opacityWhitebg form-signin" style="margin-top:10px;">


  <h2>@ViewData["Title"]</h2>
  <h3>@ViewData["Message"]</h3>

  <div class="row">
    <div class="col-sm-12 ">
      @using (Html.BeginForm())
      {
        @Html.ValidationSummary(true, "Registration failed. Check your Registration details.");
        <div>
          <fieldset>
            <div>@Html.LabelFor(r => r.Name) </div>

            <div>
              @Html.TextBoxFor(r => r.Name, new { @class = "form-control input-lg" })
              @Html.ValidationMessageFor(r => r.Name)
            </div>

            <div>@Html.LabelFor(r => r.Password)</div>

            <div>
              @Html.PasswordFor(r => r.Password, new { @class = "form-control input-lg" })
              @Html.ValidationMessageFor(r => r.Password)
            </div>

            <div>@Html.LabelFor(r => r.ConfirmPass) </div>

            <div>
              @Html.PasswordFor(r => r.ConfirmPass, new { @class = "form-control input-lg" })
              @Html.ValidationMessageFor(r => r.ConfirmPass)
            </div>

            <div>@Html.LabelFor(r => r.Mail) </div>

            <div>
              @Html.TextBoxFor(r => r.Mail, new { @class = "form-control input-lg" })
              @Html.ValidationMessageFor(r => r.Mail)
            </div>

            <input class="btn btn-info btn-lg themeBGColor" type="submit" onclick="this.form.submit(); this.disabled = true; " value="Register" />

          </fieldset>
        </div>
      }
    </div>
  </div>
</div>
